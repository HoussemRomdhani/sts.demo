@model identity.Models.RoleDetails

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Administration</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminRole">Roles</a></li>
        <li class="breadcrumb-item active" aria-current="page">Role Infos</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <a href="#">Id : @Model.Role.Id</a>
    </div>
    <div class="card-body">
        <div>
            <h5 class="mb-3">@Model.Role.Name</h5>
        </div>

        <hr />

        <table class="table table-striped table-sm m-1 p-1">
            <caption style="caption-side:top" class="text-info">Members</caption>
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2" class="text-secondary">No users are members</td></tr>
            }
            else
            {
                @foreach (var user in Model.Members)
                {
                    <tr>
                        <th>User name</th>
                        @*<th>First name</th>
                        <th>Last name</th>*@
                        <th>Email</th>
                    </tr>
                    <tr>
                        <td>@user.UserName</td>
                        @*<td>@user.FirstName</td>
                        <td>@user.LastName</td>*@
                        <td>@user.Email</td>
                    </tr>
                }
            }
        </table>

    </div>
    <div class="card-footer text-center">
        <a href="@Url.Action("Update", "AdminRole", new { id = Model.Role.Id})" class="text-info">
            <i class="fas fa-user-edit"></i> Edit
        </a>
        <a href="@Url.Action("Delete", "AdminRole", new { id = Model.Role.Id})" class="text-danger" style="margin-left: 5%;">
            <i class="fas fa-user-times"></i> Delete
        </a>
    </div>
</div>



