@model identity.ViewModels.CreateApiScopeViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Administration</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="ApiScopes">Scopes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create scope</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <a asp-action="Create">
            Create scope for <strong>@Model.ApiResourceName</strong>
        </a>
    </div>
    <div class="card-body">
        <form class="m-1 p-1" asp-action="Create" method="post">

            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <div asp-validation-summary="All"></div>
                </div>
            }

        <div class="form-group">
            @* <label asp-for="Scope" class="required"></label>*@
            <input asp-for="ApiResourceId" class="form-control" hidden />
            <input asp-for="ApiResourceName" class="form-control" hidden />
        </div>

            <div class="form-group">
                <label asp-for="Name" class="required"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>

        </form>
    </div>
</div>




