@model IEnumerable<IdentityServer4.EntityFramework.Entities.ApiScope>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Administration</a></li>
        <li class="breadcrumb-item active" aria-current="page">Api Scopes</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <a asp-action="Create">
            Create api Scope
        </a>
    </div>
    <div class="card-body">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <strong>@TempData["message"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <table class="table table-striped table-sm m-1 p-1">
            <tr>
                <th>Name</th>
                <th>Api</th>
                <th></th>
            </tr>
            @foreach (var scope in Model)
            {
        <tr>
            <td>@scope.Name</td>
            <td>@scope.DisplayName</td>

            <td>
                <a href="@Url.Action("Infos", "ApiScopes", new { id = scope.Id})">
                    <i class="far fa-id-badge text-info"></i>
                </a> |
                <a href="@Url.Action("Update", "ApiScopes", new { id = scope.Id})">
                    <i class="fas fa-user-edit text-info"></i>
                </a> |
                <a href="@Url.Action("Delete", "ApiScopes", new { id = scope.Id})">
                    <i class="fas fa-user-times text-danger"></i>
                </a>
            </td>
        </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        <p style="text-align:right;" class="text-info">@Model.Count() api scope(s)</p>
    </div>
</div>
