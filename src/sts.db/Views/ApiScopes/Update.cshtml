@model identity.Models.RoleDetails

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Administration</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="AdminRole">Roles</a></li>
        <li class="breadcrumb-item active" aria-current="page">Update role</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <a href="#">
            Update role
        </a>
    </div>
    <div class="card-body">
        <div>
            <h5 class="mb-3">Role name:  @Model.Role.Name</h5>
        </div>

        <hr />

        <form class="m-1 p-1" asp-action="Update" method="post">

            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <input type="hidden" name="RoleId" value="@Model.Role.Id" />
            <input type="hidden" name="RoleName" value="@Model.Role.Name" />

            <span class="p-1 text-secondary">
                Add to @Model.Role.Name
            </span>
            <table class="table table-striped table-sm m-1 p-1">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr><td colspan="2" class="text-secondary">All users are members</td></tr>
                }
                else
                {
                    @foreach (var user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>


            <span class="p-1 text-secondary">
                Delete from @Model.Role.Name
            </span>
            <table class="table table-striped table-sm m-1 p-1">
                @if (Model.Members.Count() == 0)
                {
                    <tr><td colspan="2" class="text-secondary">No users are members</td></tr>
                }
                else
                {
                    @foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>
        </form>

    </div>
</div>










