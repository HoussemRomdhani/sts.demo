@model IdentityServer4.EntityFramework.Entities.ApiResource

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Administration</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Apis">Apis</a></li>
        <li class="breadcrumb-item active" aria-current="page">Apis Infos</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <a href="#">Id : @Model.Id</a>
    </div>
    <div class="card-body">
        <div>
            <h5 class="mb-3">@Model.Name</h5>
        </div>
        <div>
            <p>
                Display name:  @Model.DisplayName
            </p>
            <p>
                Description:  @Model.Description
            </p>
        </div>

        <hr />

        <table class="table table-striped table-sm m-1 p-1">
            <caption style="caption-side:top" class="text-info">Scopes</caption>
            @if (Model.Scopes.Count() == 0)
            {
                <tr><td colspan="2" class="text-secondary">No scopes found</td></tr>
            }
            else
            {
                <tr>
                    <th>Scope</th>
                </tr>
                @foreach (var scope in Model.Scopes)
                {
                    <tr>
                        <td>@scope.Scope</td>
                    </tr>
                }
            }
        </table>

    </div>
    <div class="card-footer text-center">
        <a href="@Url.Action("Update", "Apis", new { id = Model.Id})" class="text-info">
            <i class="fas fa-edit"></i> Edit
        </a>

        <a href="@Url.Action("Create", "ApiScopes", new { id = Model.Id})" class="text-info" style="margin-left: 5%;">
            <i class="fas fa-plus"></i> Add scope
        </a>

        <a href="@Url.Action("Delete", "Apis", new { id = Model.Id})" class="text-danger" style="margin-left: 5%;">
            <i class="fas fa-trash"></i> Delete
        </a>
    </div>
</div>



