@model IdentityServer4.EntityFramework.Entities.ApiResource

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Administration</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Apis">Apis</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create api</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <a asp-action="Create">
            Create api
        </a>
    </div>
    <div class="card-body">
        <form class="m-1 p-1" asp-action="Create" method="post">

            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <div asp-validation-summary="All"></div>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="form-group">
                <label asp-for="Name" class="required"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DisplayName"></label>
                <input asp-for="DisplayName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>
        </form>
    </div>
</div>






